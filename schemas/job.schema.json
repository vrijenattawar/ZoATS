{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Job",
  "description": "Schema for job requisition in ZoATS",
  "type": "object",
  "required": ["id", "title", "status", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique job identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "title": {
      "type": "string",
      "description": "Job title"
    },
    "description": {
      "type": "string",
      "description": "Full job description"
    },
    "requirements": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Required qualifications"
    },
    "preferred_skills": {
      "type": "array",
      "items": {"type": "string"}
    },
    "status": {
      "type": "string",
      "enum": ["draft", "open", "on_hold", "filled", "closed"],
      "description": "Job status"
    },
    "department": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "remote_ok": {
      "type": "boolean",
      "default": false
    },
    "salary_range": {
      "type": "object",
      "properties": {
        "min": {"type": "number"},
        "max": {"type": "number"},
        "currency": {"type": "string", "default": "USD"}
      }
    },
    "hiring_manager": {
      "type": "string",
      "description": "Hiring manager name or email"
    },
    "rubric": {
      "type": "object",
      "description": "Scoring rubric for candidates",
      "properties": {
        "criteria": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "weight": {"type": "number", "minimum": 0, "maximum": 1},
              "description": {"type": "string"}
            }
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "source_url": {
      "type": "string",
      "format": "uri",
      "description": "Original job posting URL"
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}
